# =====================
#   i3 CONFIG SKIBIDI
# =====================

set $mod Mod4
font pango:DepartureMono Nerd Font Mono 
set $refresh_i3status killall -SIGUSR1 i3status

#startup applications
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id pulseaudio --start
exec --no-startup-id libinput-gestures >/dev/null || libinput-gestures-setup start
exec --no-startup-id pgrep -x dunst >/dev/null || dunst
exec --no-startup-id udiskie -a &
exec_always --no-startup-id picom --config ~/.config/picom.conf
exec_always --no-startup-id xss-lock -- ~/.config/lock/lock.sh
exec_always --no-startup-id autotiling
exec_always --no-startup-id killall -q polybar
exec_always --no-startup-id sh -c "sleep 1 && /usr/bin/polybar -c ~/.config/polybar/config.ini main"
exec_always --no-startup-id xrdb ~/.Xresources

# Audio
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec ~/.config/i3/scripts/volume-up.sh

#Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set 5%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

#Workspace key
bindsym XF86LaunchA exec --no-startup-id ~/.config/i3/scripts/i3-workspace-carousel.sh

#Fullscreen key independent


#Random Wallpaper
exec_always --no-startup-id feh --bg-scale ~/.config/wallpapers/20.png 

#Floating modifier
floating_modifier $mod

#Launch apps
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+q kill
bindsym $mod+Shift+S exec flameshot gui
bindsym $mod+b exec firefox
bindsym $mod+e exec thunar
bindsym $mod+d exec --no-startup-id ~/.config/rofi/launchers/type-7/launcher.sh
bindsym $mod+Shift+p exec --no-startup-id ~/.config/rofi/powermenu/type-6/powermenu.sh
bindsym $mod+l exec --no-startup-id ~/.local/bin/lock.sh
bindsym XF86FullScreen fullscreen toggle

# Navigation
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Layuout controls
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload/Restart/Exit i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -f 'pango:DepartureMono Nerd Font Mono 17' -m 'You are about to exit i3' -B 'Yes, exit i3' 'i3-msg exit'"

# Resize mode
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ntilde resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

#colors
#https://github.com/arcticicestudio/nord
#Polar Night
set $nord-grey1 #2e3440
set $nord-grey2 #3b4252
set $nord-grey3 #434c5e
set $nord-grey4 #4c566a

#Snow Storm
set $nord-white1 #d8dee9
set $nord-white2 #e5e9f0
set $nord-white3 #eceff4

#Frost
set $nord-frost1 #8fbcbb
set $nord-frost2 #88c0d0
set $nord-frost3 #81a1c1
set $nord-frost4 #5e81ac

#Aurora
set $nord-red #bf616a
set $nord-orange #d08770
set $nord-yellow #ebcb8b
set $nord-green #a3be8c
set $nord-pink #b48ead

#class                      border        backgr       text	    indicator   childborder
client.focused		    $nord-grey1  $nord-grey1  $nord-white1  $nord-white1  $nord-white1
client.focused_inactive	    $nord-grey1  $nord-grey1  $nord-white1  $nord-grey4   $nord-grey4
client.unfocused	    $nord-grey1  $nord-grey1  $nord-white1  $nord-grey4   $nord-grey4
client.urgent		    $nord-grey1  $nord-grey1  $nord-white1  $nord-pink    $nord-pink
client.placeholder	    $nord-grey1  $nord-grey1  $nord-white1  $nord-pink    $nord-pink
client.background	    $nord-grey1

#i3-gaps
gaps inner 4
gaps outer 2
for_window [class="^.*"] border pixel 1

